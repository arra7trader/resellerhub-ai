{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "css/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "js/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/js/$1"
        },
        {
            "src": "/(.*\\.html)",
            "dest": "/$1"
        },
        {
            "src": "/",
            "dest": "/index.html"
        }
    ],
    "env": {
        "TURSO_DATABASE_URL": "@turso_database_url",
        "TURSO_AUTH_TOKEN": "@turso_auth_token",
        "GROQ_API_KEY": "@groq_api_key",
        "JWT_SECRET": "@jwt_secret"
    }
}